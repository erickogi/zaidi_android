<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="2dp"

    android:paddingEnd="2dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="1dp"


    >
    <!--android:foreground="?attr/selectableItemBackground"-->
    <!--app:cardElevation="1dp"-->
    <!--app:strokeColor="#F1F1F1"-->
    <!--app:strokeWidth="0dp"-->
    <RelativeLayout

        android:padding="5dp"
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">


        <LinearLayout
            android:id="@+id/linear"
            android:layout_toStartOf="@+id/more"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingStart="2dp"

            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:paddingBottom="3dp">

                        <RelativeLayout
                            android:id="@+id/account_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="2dp"
                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgae_status"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_done_black_24dp"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp"
                                app:civ_fill_color="@color/green_color_picker" />

                        </RelativeLayout>

                        <TextView

                            android:id="@+id/txt_name_lbl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:text="Names"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#000000"
                            android:textSize="13.5sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:src="@drawable/ic_person_black_24dp"
                            android:visibility="gone" />

                        <TextView

                            android:id="@+id/txt_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"


                            android:layout_weight="2"
                            android:text="Farmers names"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textStyle="bold"
                            android:textColor="@color/textblack"

                            tools:capitalize="words" />


                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="3dp"
                            android:text="@string/_12_12_2018"
                            android:textAlignment="viewEnd"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textStyle="normal"

                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_more_vert_black_24dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="1.5dp"
                        android:id="@+id/l_big"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/l_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView


                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/cycle"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/textblack"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/txt_cycle"
                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="2"
                                    android:text="cycle "
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="visible">

                                <TextView

                                    android:id="@+id/txt_code_lbl"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:text="Code : "
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/textblack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_id"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_weight="2"

                                    android:singleLine="true"
                                    android:text="55293788239"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Route : "

                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/textblack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_route"
                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content"

                                    android:layout_weight="2"
                                    android:text="Kilimani"
                                    android:textAlignment="viewStart"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Balance  "
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/textblack"

                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_balance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="2"

                                    android:text="3000 Ksh"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2">

                    <View

                        android:id="@+id/status_view"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:background="@color/green_color_picker" />

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@string/active"
                        android:textColor="@color/green_color_picker"
                        android:textSize="11.5sp"
                        android:textStyle="italic|bold" />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_vert_black_24dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#F1F1F1" />


</LinearLayout>