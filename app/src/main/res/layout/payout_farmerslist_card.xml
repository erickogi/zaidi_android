<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/picture_frame"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/divider"
    app:strokeWidth="2dp">


    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/green_color_picker">

        <LinearLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@color/divider"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Farmer Names"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="34553"
                android:textAlignment="viewEnd"
                android:textStyle="italic" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_totals"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header"
            android:layout_marginStart="4dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="4">


            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Totals"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_milk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0 Ltrs" />
            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_loans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="0.0 /=" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0 /=" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/linear_totals"
            android:layout_marginStart="3dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/linear_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_totals"
            android:layout_marginStart="4dp"

            android:layout_marginTop="2dp"

            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <View


                    android:id="@+id/status_view"
                    android:layout_width="10dp"

                    android:layout_height="10dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/green_color_picker"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Approved"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:background="@color/divider" />

            <TextView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:text="Bal"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:text="30000 Ksh"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>
</android.support.design.card.MaterialCardView>