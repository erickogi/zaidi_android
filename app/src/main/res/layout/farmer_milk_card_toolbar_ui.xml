                android:background="@color/green_color_picker">

                <android.support.design.card.MaterialCardView
                    android:id="@+id/farmer_details"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:cardElevation="4dp">

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Farmer's Name"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_code"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="11344"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/txt_payout_no"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/cerclebackgroundyello"
                            android:gravity="center"
                            android:text="12"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </android.support.design.card.MaterialCardView>


                <LinearLayout
                    android:id="@+id/card_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/farmer_details"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="From : "
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txt_card_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12 - Jun"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="To : "
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txt_card_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12 - Jun"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

