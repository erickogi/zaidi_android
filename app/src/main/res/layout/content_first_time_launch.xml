<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dev.lishabora.Views.Trader.Activities.FirstTimeLaunch"
    tools:showIn="@layout/activity_first_time_launch">

    <com.stepstone.stepper.StepperLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/stepperLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:ms_backButtonColor="@color/colorPrimaryDark"
        app:ms_completeButtonColor="@color/colorPrimary"
        app:ms_nextButtonColor="@color/colorPrimaryDark"
        app:ms_activeStepColor="@color/colorPrimary"


        app:ms_showErrorMessageEnabled="true"

        app:ms_stepperFeedbackType="content_progress|disabled_bottom_navigation"
        app:ms_stepperType="tabs"
        app:ms_tabNavigationEnabled="true"


        />
</RelativeLayout>
